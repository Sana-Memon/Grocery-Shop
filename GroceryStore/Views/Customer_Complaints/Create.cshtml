@model GroceryStore.Controllers.Dto.UserDto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/CustomerDashboard.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Create new Complaint</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">

                                @using (Html.BeginForm("Create", "Customer_Complaints", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                        <table class="content-table">
                                            <tr>
                                                <th>
                                                    Complaint Type
                                                </th>
                                                <td>
                                                    @Html.DropDownList("Complaint_type_Id", null, htmlAttributes: new { @class = "form-control" })
                                                </td>
                                            </tr>

                                            <tr>
                                                <th>
                                                    Compaint description
                                                </th>
                                                <td>
                                                    @Html.EditorFor(model => model.customer_Complaint.Complaint, new { htmlAttributes = new { @class = "form-control" } })

                                                </td>

                                            </tr>
                                        </table>

                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Create" class="btn btn-default" />
                                            </div>
                                        </div>
                                    </div>

                                }

                                <hr>
                                <div>
                                    @Html.ActionLink("Back to List", "Index")
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
