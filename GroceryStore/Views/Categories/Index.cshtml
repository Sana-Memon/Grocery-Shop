@*@model IEnumerable<GroceryStore.Models.Category>*@

@model GroceryStore.Controllers.Dto.UserDto


@{
    Layout = "~/Views/Shared/AdminDashboard.cshtml";
    //Layout = null;
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">All Products</h1>
                <div>
                    <a href="/Categories/Create" class=" button2 py-3 px-4">Create New Category</a>
                </div>
                <hr />
                
                    <table class="content-table">
                        <thead>

                            <tr>
                                <th>Category</th>
                                <th>Category Id</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.categories)
                            {
                                <tr class="active-row">
                                    <td>@item.category1</td>
                                    <td>@item.category_id</td>
                                    
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.category_id })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.category_id })
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                

            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <!-- cxvfdgtrhyx -->
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>