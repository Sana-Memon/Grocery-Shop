@model GroceryStore.Controllers.Dto.UserDto

@{
    Layout = "~/Views/Shared/AdminDashboard.cshtml";
    
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Edit Category details</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <hr />

                                @using (Html.BeginForm("Edit", "Categories", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(model => model.category.category_id)


                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <table class="content-table">
                                            <tr>
                                                <th>
                                                    Category name
                                                </th>
                                                <td>
                                                    @Html.EditorFor(model => model.category.category1, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.category.category1, "", new { @class = "text-danger" })

                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-6">
                                            <input type="submit" value="Save" class="btn btn-default" />
                                        </div>
                                    </div>

                                }


                                <div>
                                    @Html.ActionLink("Back to List", "Index")
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>