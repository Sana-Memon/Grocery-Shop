@model GroceryStore.Controllers.Dto.UserDto

@{
    ViewBag.User = Model.User;
    Layout = "~/Views/Shared/AdminDashboard.cshtml";
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Ended Stock Products</h1>

                <center>
                    <table class="content-table">
                        <thead>

                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Stock ammount</th>
                                <th>Mart Location</th>
                                <th>Product Category</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Products)
                            {
                                <tr class="active-row">
                                    <td>
                                        <img src="@Html.DisplayFor(modelItem => item.ImageFilePath)" alt="" width="80px" height="80px" />
                                    </td>
                                    <td>@item.product_name</td>
                                    <td>@item.StockAmount</td>
                                    <td>@item.MartLocation</td>
                                    <td>@item.Category.category1</td>
                                    <td>
                                        @Html.ActionLink("Edit", "../allproducts/Edit", new { id = item.product_id })
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </center>

            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <!-- cxvfdgtrhyx -->
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
