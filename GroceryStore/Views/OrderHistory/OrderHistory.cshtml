@model GroceryStore.Controllers.Dto.UserDto
@{ ViewBag.Title = "OrderHistory";
    Layout = "~/Views/Shared/CustomerDashboard.cshtml"; }

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">My Order</h1>


                <h1 class="Order-history">Order Summary</h1>
                <center>
                    <table class="content-table">
                        <thead>

                            <tr>
                                <th>Date</th>
                                <th>Order Id</th>
                                <th>Quantity</th>
                                <th>Total Price</th>
                                <th>Billing Address</th>
                                <th>Order Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.OrderDto)
                            {
                <tr class="active-row">
                    <td>@item.date</td>
                    <td>@item.order_id</td>
                    <td>@item.quantity</td>
                        <td>@item.CostPrice</td>
                    <td>
                        @if (item.AddressName != null && item.AddressName != "")
                        {
        @item.AddressName }
                        else
                        {
        <span>NA</span>}
                    </td>
                    <td>
                        @item.OrderStatus
                    </td>
                    <td>
                        <ul class="nav navbar-right navbar-top-links" style="text-align: center; position: relative; left: -20px;">
                            <li class="dropdown navbar-inverse">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    <span>&#9776;</span>
                                </a>
                                <ul class="dropdown-menu dropdown-alerts" style="width: 80px !important;">
                                    @if (item.OrderStatus != "CANCEL" && item.OrderStatus != "DELETED" && item.OrderStatus != "DELIVERED" && item.OrderStatus != "DISPATCHED")
                                    {
                                        <li>
                                            <a href="../OrderHistory/ChangeStatus?status=CANCEL&id=@item.order_id">
                                                <div>
                                                    <span class="pull-right text-muted small">
                                                        Cancel
                                                    </span>
                                                </div>
                                            </a>
                                        </li>

                                     }

                                </ul>
                            </li>
                        </ul>
                    </td>
                </tr>}

                        </tbody>
                    </table>
                </center>

            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <!-- cxvfdgtrhyx -->
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->