@model GroceryStore.Models.User
@{
    ViewBag.Title = "AddNewAddress";
    Layout = "~/Views/Shared/CustomerDashboard.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Add New Address</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Add new adress Here
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                @using (Html.BeginForm("Index", "AddNewAddress", FormMethod.Post))
                                {
                                    <div class="form-group">
                                        <select class="form-control" name="town" id="town">
                                            <option value="volvo">Select Town</option>
                                            <option value="volvo">Sadar Town</option>
                                            <option value="saab">Bin Qasim Town.</option>
                                            <option value="mercedes">Gadap Town.</option>
                                            <option value="audi">Gulshan Town.</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                            <label>Enter area Name</label>
                                            <input class="form-control" placeholder="Enter text">
                                      </div>


                                    <div class="form-group">
                                            <label>Enter Block/ Street </label>
                                            <input class="form-control" placeholder="Enter text">
                                    </div>
                                    <div class="form-group">
                                           <label>Enter Plot/ flat No</label>
                                           <input class="form-control" placeholder="Enter text">
                                    </div>

                                    @Html.TextAreaFor(m => m.Home_Address)

                                    <button type="submit" class="button2">Submit Button</button>
                                                                                                
                                }
                              
                                <h1>@ViewBag.saveresult</h1>
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                            <div class="col-lg-6">
                                <h1>Your Adresses</h1>
                                <form role="form">
                                    <textarea class="form-control" id="w3review" name="w3review" rows="4" cols="70">
                                                    
                                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque condimentum ultrices tempus. Proin sit amet lectus a libero venenatis accumsan. Cras lectus erat, tristique et libero et, tempus ullamcorper nisl.                                                     </textarea>

                                </form>
                                <br><br> <button type="reset" class="button2">Reset Button</button>


                            </div>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>