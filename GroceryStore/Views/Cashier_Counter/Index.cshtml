@model GroceryStore.Controllers.Dto.UserDto

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminDashboard.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Add New Product</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Add New Products
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">

                                <p>
                                    @Html.ActionLink("Create New", "Create")
                                </p>
                                @if (Model.Cashier_Counters.Count() > 0)
                                {
                                    <table class="table">
                                        <tr>
                                            <th>
                                                Location
                                            </th>
                                            <th>
                                                MaxOrderLimit
                                            </th>
                                        </tr>

                                        @foreach (var item in Model.Cashier_Counters)
                                        {
                                            <tr>
                                                <td>
                                                    @item.Location
                                                </td>
                                                <td>
                                                    <img src="@Html.DisplayFor(modelItem => item.MaxOrderLimit)" alt="" width="50px" height="50px" />
                                                </td>

                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                                </td>
                                            </tr>
                                        }

                                    </table>

                                }
                            </div>
                            <!-- /.container-fluid -->
                        </div>
                        <!-- /#page-wrapper -->

                    </div>
