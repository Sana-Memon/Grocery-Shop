@model IEnumerable<GroceryStore.Models.product>

@{
   
    // Layout = "~/Views/Shared/AdminDashboard.cshtml";
    Layout = null;

}



<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Add New Product</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Add New Products
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">

                                <p>
                                    @Html.ActionLink("Create New", "Create")
                                </p>
                                <table class="table">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.product_name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ImageFilePath)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.SellingPrice)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CostPrice)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DiscountPrice)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FullDescription)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.StockAmount)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.MartLocation)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ImageFilePath2)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Category.category1)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.SKU.Description)
                                        </th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.product_name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ImageFilePath)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SellingPrice)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CostPrice)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DiscountPrice)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FullDescription)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.StockAmount)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MartLocation)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ImageFilePath2)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Category.category1)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SKU.Description)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.product_id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.product_id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.product_id })
                                            </td>
                                        </tr>
                                    }

                                </table>
                            </div>
                            <!-- /.container-fluid -->
                        </div>
                        <!-- /#page-wrapper -->

                    </div>
