@model GroceryStore.Controllers.Dto.UserDto

@{
    Layout = "~/Views/Shared/AdminDashboard.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Edit Product details</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">


                                @using (Html.BeginForm("Edit", "Allproducts", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(model => model.product.product_id)
                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <table class="content-table">
                                            <tr>
                                                <th>
                                                    Product Name
                                                </th>

                                                <td>

                                                    @Html.EditorFor(model => model.product.product_name, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.product.product_name, "", new { @class = "text-danger" })

                                                </td>
                                            </tr>

                                            <tr>
                                                <th>
                                                    Select Category
                                                </th>
                                                <td>

                                                    @Html.DropDownList("category_id", null, htmlAttributes: new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.product.category_id, "", new { @class = "text-danger" })

                                                </td>
                                            </tr>

                                            <tr>
                                                <th>
                                                    Image file path
                                                </th>
                                                <td>

                                                    @Html.EditorFor(model => model.product.ImageFilePath, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.product.ImageFilePath, "", new { @class = "text-danger" })

                                                </td>
                                            </tr>

                                            <tr>
                                                <th>
                                                    Selling Price
                                                </th>
                                                <td>

                                                    @Html.EditorFor(model => model.product.SellingPrice, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.product.SellingPrice, "", new { @class = "text-danger" })

                                                </td>
                                            </tr>

                                            <tr>
                                                <th>
                                                    Cost Price
                                                </th>
                                                <td>

                                                    @Html.EditorFor(model => model.product.CostPrice, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.product.CostPrice, "", new { @class = "text-danger" })

                                                </td>
                                            </tr>

                                            <tr>
                                                <th>
                                                    Discount  Price
                                                </th>
                                                <td>

                                                    @Html.EditorFor(model => model.product.DiscountPrice, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.product.DiscountPrice, "", new { @class = "text-danger" })

                                                </td>
                                            </tr>

                                            <tr>
                                                <th>
                                                    Full description
                                                </th>
                                                <td>

                                                    @Html.EditorFor(model => model.product.FullDescription, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.product.FullDescription, "", new { @class = "text-danger" })

                                                </td>

                                            </tr>

                                            <tr>
                                                <th>
                                                    Stock Ammount
                                                </th>
                                                <td>

                                                    @Html.EditorFor(model => model.product.StockAmount, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.product.StockAmount, "", new { @class = "text-danger" })

                                                </td>
                                            </tr>

                                            <tr>
                                                <th>
                                                    Select SKU
                                                </th>
                                                <td>

                                                    @Html.DropDownList("SkuId", null, htmlAttributes: new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.product.SkuId, "", new { @class = "text-danger" })

                                                </td>
                                            </tr>

                                            <tr>
                                                <th>
                                                    Mart Location
                                                </th>
                                                <td>

                                                    @Html.EditorFor(model => model.product.MartLocation, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.product.MartLocation, "", new { @class = "text-danger" })

                                                </td>
                                            </tr>

                                            <tr>
                                                <th>
                                                    Image path 2
                                                </th>
                                                <td>

                                                    @Html.EditorFor(model => model.product.ImageFilePath2, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.product.ImageFilePath2, "", new { @class = "text-danger" })

                                                </td>
                                            </tr>

                                        </table>


                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Submit" class="btn btn-default" />
                                            </div>
                                        </div>
                                    </div>
                                }

                                <div>
                                    @Html.ActionLink("Back to List", "Index")
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>