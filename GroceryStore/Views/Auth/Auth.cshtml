<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                @using (Html.BeginForm("Authorise", "Auth", FormMethod.Post, new { @class = "login100-form validate-form" }))
                {
                    <span class="login100-form-title p-b-26">
                        Welcome
                    </span>
                    <h2>Grocery Store</h2>


                    <div class="wrap-input100 validate-input" data-validate="Valid email is: a@b.c">
                        @*<label for="Email" class="form-control">Email</label>*@
                        <input id="email" class="input100" data-val="true" data-val-required="This is Reqired Field" id="Email" name="Email" type="text" value="">
                        <span class="focus-input100" data-placeholder="Email"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <span class="btn-show-pass">
                            <i class="zmdi zmdi-eye"></i>
                        </span>
                        <input id="password" class="input100" type="password" name="Password">
                        <span class="focus-input100" data-placeholder="Password"></span>
                    </div>



                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" type="submit">
                                <a href="#" style="color: white;">
                                    Login
                                </a>

                            </button>
                        </div>
                    </div>

                    @*@Html.DisplayFor(item => item.LoginErrorMsg)*@

                    <div class="text-center p-t-115">
                        <span class="txt1">
                            Don’t have an account?
                        </span>

                        <a class="txt2" href="../Signup/Signup">
                            Sign Up
                        </a>
                    </div>

                }
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->

    <script src="js/main-login.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

</body>
</html>


