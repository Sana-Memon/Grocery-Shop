<style>
    .input100:focus + .focus-input100::after {
        top: -15px !important;
    }
    input[type=text]:focus + .focus-input100::after {
        top: -15px !important;
    }

    .input-hover + .focus-input100::after{
        top: -15px !important;
    }

</style>

<script>
    @*document.getElementById("#username").keypress = (event) => {
        console.log(event);
    };*@
    $("#email").keyup(setHover);
    $("#password").keyup(setHover);

    function setHover() {
        if ($(this).val() != "") {
            console.log('added');
            $(this).addClass("input-hover");
        } else {
            console.log('removed');
            $(this).removeClass("input-hover");
        }
    }

</script>