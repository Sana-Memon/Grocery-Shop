@model GroceryStore.Controllers.Dto.UserDto

@{
    Layout = "~/Views/Shared/AdminDashboard.cshtml";
}



<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Order Details</h1>
                <center>
                    <table class="content-table">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Location</th>
                                <th>Category</th>
                                <th>Discount per product</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.order_detail_dto.orderDetails)
                            {
                                <tr>
                                    <td>
                                        <img src="../@item.ImageFilePath" alt="" width="60px" height="60px">
                                    </td>
                                </tr>
                                <tr class="active-row">
                                    <td>@item.product_name</td>
                                    <td>@item.SellingPrice</td>
                                    <td>@item.quantity</td>
                                    <td>@item.MartLocation</td>
                                    <td>@item.category</td>
                                    <td>@item.DiscountPrice</td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </center>

                @if (Model.order_detail_dto.counter_Records != null)
                {
                    <hr>
                    <center>
                        <table class="content-table">
                            <thead>
                                <tr>
                                    <th>Counter Location</th>
                                    <th>Customer's choice time</th>
                                </tr>
                            </thead>
                            <tbody>


                                <tr class="active-row">
                                    <td>@Model.order_detail_dto.counter_Records.Location</td>
                                    <td>@Model.order_detail_dto.counter_Records.TakeAwayTime</td>
                                </tr>


                            </tbody>
                        </table>
                    </center>
                }

            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div>
            <a href="/ViewOrderQueue/ViewOrderQueue" class=" button2 py-3 px-4">Back to List</a>
        </div>
        <!-- /.row -->
        <!-- cxvfdgtrhyx -->
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->